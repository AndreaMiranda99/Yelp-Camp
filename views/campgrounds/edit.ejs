<%- include ("../partials/header") %>

<h1>Form to Edit a Campground</h1>
<div class="container" style="width: 40%; padding: 25px auto;">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group row">
            <p class="col-sm-3"> Campground Name</p>
            <input class="form-control col-sm-9" type="text" name = "newCampground[name]" value = "<%= campground.name %>">
        </div>
        <div class="form-group row">
            <p class="col-sm-3"> Campground Image</p>
            <input class="form-control col-sm-9" type="text" name = "newCampground[image]" value = "<%= campground.image %>">
        </div>
        <div class="form-group row">
            <p class="col-sm-3"> Campground Description</p>
            <input class="form-control col-sm-9" type="text" name = "newCampground[description]" value = "<%= campground.description %>">
        </div>

        <div class="form-group ">
            <button class="btn btn-secondary">Submit !</button>
        </div>        
   </form>
</div> 

<%- include ("../partials/footer") %>