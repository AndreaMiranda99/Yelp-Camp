<%- include ('../partials/header'); %> 

<h1>Create a new Campground</h1>
<div class="container" style="width: 40%; padding: 25px auto;">
    <form action="/campgrounds" method="POST">
    <div class="form-group row">
        <p class="col-sm-3"> Campground Name</p>
        <input class="form-control col-sm-9" type="text" placeholder="name" name = "newCampground">
    </div>
    <div class="form-group row">
        <p class="col-sm-3"> Campground Image</p>
        <input class="form-control col-sm-9" type="text" placeholder="Image url" name = "newCampImage">
    </div>
    <div class="form-group ">
        <button class="btn btn-secondary">Submit !</button>
    </div>
</div>

    

    
</form>

