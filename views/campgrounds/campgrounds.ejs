<%- include ('../partials/header');  %> 
<div class="container">
    <header class= "jumbotron">    
        <div class="container">
            <h1>This is the campgrounds page</h1>
            <p>View our handpicked campgrounds from all over the world.</p>
            <p>
                <a class="btn btn-secondary" href="/campgrounds/new">Add New Campgrounds</a>
            </p>
        </div>      
        
    </header>

    <div class="row">
        <% campgrounds.forEach(function(campgrounds){ %>
            <div class = "col-md-3 col-sm-6">
                <div class="card">
                    <h4><%= campgrounds.name %></h4>
                    <img class="card-img-top" src="<%= campgrounds.image %>" alt="">
                    <a href="/campgrounds/<%= campgrounds._id %>">Read More</a>
                </div>                 
            </div>
            
        <% }); %>
    </div>
</div>

<%- include ('../partials/footer'); %> 